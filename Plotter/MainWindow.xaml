<Window x:Class="Plotter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plotter"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Top">
            <Button Name="BtnAuto" Content="Automatik" MinWidth="100"/>
            <Button Name="BtnHand" Content="Hand / Home" MinWidth="100" Width="88"/>
            <Button Name="BtnLivePlot" Content="Live Plot" MinWidth ="100"/>
        </StackPanel>
        <Button Name ="BtnConnect" Content="Connect" Height="40" Width="120"/>
        <Frame x:Name="Main" Margin="0,40,0,0" HorizontalAlignment="Right" Width="1000"/>
    </Grid>
</Window>
